/**index.wxss**/
.indexPage{
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}
.card{
  min-width: 100%;
  height: 950rpx;
}
.search {
  padding: 20rpx;
  height: 80rpx;
}
.searchInput{
  height: 100%;
  width: 500rpx;
  position: relative;
  border: 1px solid #dbdbdb;
  border-radius: 20rpx;
  float: left;
}
.searchInput input{
  float: left;
  width: 87%;
  height: 100%;
  padding-left: 20rpx;
}
.placCss{
  font-size: 30rpx;
  color: #dbdbdb;
}
.iconSearch{
  float: left;
  padding: 10rpx 0;
  margin-left: 20rpx;
}
.clearInput{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}
.calendarPic{
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 20rpx;
}
.maskCal{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.8);
  z-index: 1111;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
.calendarCom{
  width: 96%;
  position: absolute;
  top: 130rpx;
  left: 2%;
  background: #fff;
  opacity: 1;
  z-index: 11111;
  padding: 20rpx 0;
  border-radius: 10rpx;
  color: #999;
}
.closeBtn{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 50rpx 30rpx;
  color: #fff;
}
.noDataClass{
  text-align: center;
  padding-top: 40rpx;
}
.noDataPic{
  width: 474rpx;
  height: 433rpx;
  margin: 0 auto;
}
.noDataClass image{
  width: 100%;
  height: 100%;
}

.transmit{
  position: fixed;
  top: 55%;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.comment{
  top: 45%;
}
.commentCard{
  width: 100%;
  height: 900rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  z-index: 112;
}
.markComment{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,.8);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 111;
}
.calendar--cwj-icon{
  font-size: 30px !important;
}