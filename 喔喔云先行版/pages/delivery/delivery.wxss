/* pages/delivery/delivery.wxss */
page{
  background: #f6f6f6;
}
.clear{
  clear: both;
}
.top_pic{
  width: 100%;
  height: 10rpx;
}
.top_pic image{
  width: 100%;
  height: 100%;
  float: left;
}
.d_address{
  padding: 30rpx 20rpx;
  background: #FFF9F1;
}
.d_left{
  float: left;
}
.add_address{
  float: left;
}
.add_icon{
  width: 32rpx;
  height: 32rpx;
  float: left;
  margin-top: 6rpx;
}
.add_text{
  color: #F68B0E;
  font-size: 32rpx;
  line-height:45rpx;
  float: left;
  margin-left: 20rpx;
}
.d_right_icon{
  width: 28rpx;
  height: 28rpx;
  float: right;
}
.d_right_icon image{
  width: 100%;
  height: 100%;
}
.d_right{
  float: right;
  width: 28rpx;
  height: 28rpx;
  margin-top: 30rpx;
}
.d_right image{
  width: 100%;
  height: 100%;
}
.d_title{
  color:rgba(25,31,37,0.72);
  font-size: 32rpx;
  line-height: 45rpx;
}
.user_name{
  font-weight: 600;
  float: left;
  width: 140rpx;
  text-align: center;
}
.user_tel{
  font-weight: 400;
  margin-left: 30rpx;
}
.d_local_text{
  margin-top: 20rpx;
}
.d_default{
  width: 140rpx;
  float: left;
}
.d_default_text{
  width: 64rpx;
  text-align: center;
  font-size: 20rpx;
  color: #F68B0E;
  border: 1px solid #F68B0E;
  border-radius: 4rpx;
  padding: 4rpx 0;
  margin: 0 auto;
}
.d_detailed{
  width: 480rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color:rgba(25,31,37,0.4);
  float: left;
  margin-left: 30rpx;
}
.commodity_list{
  margin-top: 20rpx;
  background: #fff;
}