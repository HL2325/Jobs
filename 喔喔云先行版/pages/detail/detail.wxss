/* pages/detail/detail.wxss */
page{
  background: #f6f6f6;
}
.d_pic{
  width: 100%;
  height: 750rpx;
  position: relative;
}
.clear{
  clear: both;
}
.swiper_pic{
  width: 100%;
  height: 100%;
}
.swiper_pic image{
  width: 100%;
  height: 100%;
}
.banNum{
  width: 72rpx;
  height: 40rpx;
  font-size: 24rpx;
  background:rgba(25,31,37,0.7);
  border-radius:20rpx;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  text-align: center;
  line-height: 40rpx;
}
.d_commodity{
  padding: 24rpx 30rpx 21rpx;
  background: #fff;
}
.dc_text{
  color: #191F25;
  font-size:28rpx;
  font-weight: 600;
  line-height: 40rpx;
  margin-bottom: 9rpx;
}
.dc_price{
  float: left;
  font-size: 40rpx;
  font-weight: 600;
  color: #F68B0E;
  line-height: 56rpx;
}
.decimal{
  font-size: 30rpx;
  color: #F68B0E;
}
.dc_storage{
  font-size: 28rpx;
  color: #666;
  float: left;
  line-height: 60rpx;
  margin-left: 40rpx;
}
.delivery{
  float: right;
  line-height:30rpx;
  font-size:20rpx;
  color: #F68B0E;
  font-weight:400;
  padding: 4rpx 10rpx;
  border: 1rpx solid #F68B0E;
  border-radius: 4rpx;
  margin-top: 10rpx;
}
.dc_introduce{
  margin-top: 30rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 400;
  color: #191F25;
  text-align: center;
  padding: 30rpx 0;
}
.botBtn{
  position: fixed;
  height: 98rpx;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
}
.dc_customer{
  width: 18%;
  height: 100%;
  background: #fff;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 98rpx;
  color:rgba(25,31,37,0.72);
  text-align: center;
  padding: 0 57rpx;
  float: left;
}
.wcIcon{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 18rpx;
}
.dc_buy{
  font-size: 36rpx;
  font-weight: 400;
  float: left;
  background: #F68B0E;
  text-align: center;
  width: 67%;
  height: 100%;
  color: #fff;
  line-height: 98rpx;
}