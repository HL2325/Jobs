/**index.wxss**/
.clear{
  clear: both;
}
.home{
  width: 100%;
  height: 100%;
}
.userCard{
  border-bottom: 1px solid #d9d9d9;
  padding:30rpx 20rpx 20rpx;
  /* background: #f00; */
}
.userPic{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  margin-right: 100rpx;
}
.userPic image{
  width: 100%;
  height: 100%;
}
.userTitle{
  float: left;
  margin-top: 50rpx;
  font-size: 36rpx;
}
.userName{
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-left: 25px;
}
.listMain{
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.listCard{
  margin-top: 20rpx;
  width: 290rpx;
  height: 250rpx;
  /* border: 1px solid #d9d9d9; */
  border-radius: 20rpx;
  font-size: 32rpx;
  margin: 30rpx 20rpx 10rpx 20rpx;
}
.listCard image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.lastCard{
  text-align: center;
}
.lastSmall{
  margin-top: 60rpx;
  margin-bottom: 10rpx;
}
.bot_text{
  font-size: 26rpx;
  text-align: center;
  margin-top: 100rpx;
}
.set_btn{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.set_me, .home_set{
  float: right;
  padding: 10rpx 30rpx;
  border: 1px solid #f0f0f0;
  border-radius: 10rpx;
}
.set_me{
  margin-right: 30rpx;
}