/* pages/collect/collect.wxss */
.clear{
  clear: both;
}
.collect{
  padding: 0 30rpx;
}
.collect_list{
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.collect_pic{
  width: 180rpx;
  height: 180rpx;
  background: #ccc;
  float: left;
}
.collect_pic image{
  width: 100%;
  height: 100%;
}
.collect_right{
  float: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 480rpx;
}
.collect_title{
  font-size: 30rpx;
  color: #333;
  margin-top: 5rpx;
}
.csm_title{
  font-size: 30rpx;
  margin-top: 5rpx;
}
.collect_time{
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}
.collect_btn{
  float: right;
  font-size: 28rpx;
  border:1px solid #f0f0f0;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
}