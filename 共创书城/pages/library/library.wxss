/* pages/library/library.wxss */

.clear {
  clear: both;
}

.library {
  height: 100%;
  padding: 0 40rpx;
}

.libraryLogo {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx auto;
  /* background: #ccc; */
}
.libraryLogo image{
  width: 100%;
  height: 100%;
}

.libSearch {
  height: 80rpx;
}

.searchInput {
  width: 520rpx;
  float: left;
  border: 1px solid #d9d9d9;
  height: 100%;
  position: relative;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.searchInput input {
  width: 400rpx;
  height: 100%;
  padding-left: 40rpx;
}

.searchBtn {
  font-size: 32rpx;
  border: 1px solid #d9d9d9;
  float: left;
  width: 120rpx;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
}

.newest, .hottest {
  margin-top: 40rpx;
  padding: 0 10rpx;
}

.newestTitle {
  font-size: 32rpx;
  color: #dd5f1b;
}

.newList {
  margin-top: 20rpx;
}

.listPic {
  float: left;
  width: 80rpx;
  height: 80rpx;
  background: #ccc;
  margin-right: 80rpx;
}

.listPic image {
  width: 100%;
  height: 100%;
  float: left;
}

.listText {
  font-size: 30rpx;
  width: 490rpx;
  /* background: #f00; */
  float: left;
}

.bookInfo {
  font-size: 28rpx;
  color: #666;
}

.botBtn {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 34rpx;
  border-top: 1px dashed #d9d9d9;
  padding: 20rpx 0;
  background: #fff;
}

.clearBtn {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.clearIcon {
  margin: 20rpx;
}

.scrollMain {
  max-height: 800rpx;
  /* height: 800rpx; */
  margin-top: 10rpx;
  /* background: #f00; */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
