.changeInput {
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.changeInput input{
  height: 100%;
}
.clear{
  clear: both;
}
.hotPic{
  width: 120rpx;
  height: 120rpx;
  background: #ccc;
  float: left;
  margin-right: 40rpx;
}
.hotPic image{
  width: 100%;
  height: 100%;
}
.hotText{
  font-size: 28rpx;
  float: left;
  width: 550rpx;
}
.hotTitle{
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.dText{
  color: #666;
}
.hotList{
  border-bottom: 1px solid #d9d9d9;
  padding: 20rpx;
}
.posiTop{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
  background: #fff;
}
.noData{
  margin-top: 90rpx;
  width: 474rpx;
  height: 433rpx;
  margin:  200rpx auto;
}
.noData image{
  width: 100%;
  height: 100%;
}
.noDtaaText{
  font-size: 32rpx;
  text-align: center;
  color: #666;
}