.allBook {
  width: 100%;
  /* height: 1000rpx; *//* background: red; */
  padding-bottom: 104rpx;
}

.botTab {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}

.botList {
  width: 33.33%;
  padding: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
  float: left;
  color: #666;
  border-top: 1px solid #d9d9d9;
}

.changeTab {
  background: #f98731;
  color: #fff;
  border-top: 1px solid #f98731;
}

.cFirst {
  width: 246rpx;
  float: left;
  height: 80rpx;
  border: 1px solid #d9d9d9;
  border-radius: 10rpx;
  color: #999;
}

