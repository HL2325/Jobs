/* pages/picHome/picHome.wxss */
.indexPage{
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
}
.card{
  width: 100%;
  height: 900rpx;
}
.search {
  padding: 20rpx;
  height: 80rpx;
}
.searchInput{
  height: 100%;
  width: 500rpx;
  position: relative;
  border: 1px solid #dbdbdb;
  border-radius: 20rpx;
  float: left;
}
.searchInput input{
  float: left;
  width: 87%;
  height: 100%;
  padding-left: 20rpx;
}
.placCss{
  font-size: 30rpx;
  color: #dbdbdb;
}
.clear{
  clear: both;
}
.iconSearch{
  float: left;
  padding: 10rpx 0;
  margin-left: 20rpx;
}
.clearInput{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}
.calendarPic{
  width: 60rpx;
  height: 60rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 20rpx;
}
.maskCal{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.8);
  z-index: 1111;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
.calendarCom{
  width: 96%;
  position: absolute;
  top: 130rpx;
  left: 2%;
  background: #fff;
  opacity: 1;
  z-index: 11111;
  padding: 20rpx 0;
  border-radius: 10rpx;
  color: #999;
}
.closeBtn{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 50rpx 30rpx;
  color: #fff;
}
.noDataClass{
  text-align: center;
  padding-top: 40rpx;
}
.noDataPic{
  width: 474rpx;
  height: 433rpx;
  margin: 0 auto;
}
.noDataClass image{
  width: 100%;
  height: 100%;
}

.transmit{
  position: fixed;
  top: 55%;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.comment{
  top: 45%;
}
.commentCard{
  width: 100%;
  height: 900rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  z-index: 112;
}
.markComment{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,.8);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 111;
}
.calendar--cwj-icon{
  font-size: 30px !important;
}


/* 底部状态栏 */
.status_bar{
  width: 100%;
  background: #fff;
  /* padding: 0 20rpx; */
  height: 100rpx;
  /* background: #f00; */
  border-top: 1px solid #f0f0f0;
  position: fixed;
  bottom: 0;
  left: 0;
}
.sendStr{
  width: 44%;
  height: 70rpx;
  border-radius: 10rpx;
  border: 1px solid #f0f0f0;
  margin-top: 15rpx;
  margin-left: 3%;
  color: #ccc;
  padding-left: 20rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  float: left;
}
.bar_right{
  width: 49%;
  float: right;
  height: 100%;
  /* background: #ccc; */
}
.bar_list{
  width: 25%;
  float: left;
  height: 100%;
  position: relative;
}
.bar_icon{
  width: 50rpx;
  height: 50rpx;
  margin: 25rpx auto 0;
}
.bar_icon image{
  width: 100%;
  height: 100%;
}
.amount{
  padding: 3rpx 0;
  background: #666;
  color: #fff;
  border-radius: 15rpx;
  font-size: 24rpx;
  width: 60rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

/* 遮罩层 */
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 11;
  /* display: none; */
}

/* 输入评论 */
.send_content{
  font-size: 28rpx;
  background: #fff;
  width: 100%;
  z-index: 13;
  position: fixed;
  left: 0;
  /* top: 15%; */
  bottom: 0;
  padding-bottom: 20rpx;
}
.send_content input{
  width: 90%;
  height: 60rpx;
  border: 1px solid #f0f0f0;
  border-radius: 10rpx;
  margin: 20rpx auto;
  padding: 10rpx;
}

.switchs{
  margin-top: 40rpx;
  padding: 0 60rpx;
  font-size: 30rpx;
}
.sw_label{
  float: left;
  line-height: 64rpx;
  margin-right: 20rpx;
}
.body-view{
  width: 100rpx;
  height: 20rpx;
  float: left;
}
.sendBtn{
  float: right;
  background: #04be02;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  width: 150rpx;
  border-radius: 30rpx;
}

.check_comment{
  width: 100%;
  height: 70vh;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 13;
}
.cc_title{
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.c_conList{
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.conlist_pic{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #ccc;
  float: left;
  overflow: hidden;
}
.conlist_pic image{
  width: 100%;
  height: 100%;
}
.conlist_text{
  float: left;
}
.conlist_right{
  float: left;
  width: 590rpx;
  margin-left: 20rpx;
}
.con_parise{
  float: right;
  text-align: center;
  margin-top: 20rpx;
  padding-left: 10rpx;
}
.con_parise image{
  width: 40rpx;
  height: 40rpx;
}
.con_parise_text{
  font-size: 26rpx;
  color: #666;
}
.conlist_name{
  font-size: 26rpx;
  color: #666;
}
.conlist_content{
  font-size: 28rpx;
  color: #333;
  width: 530rpx;
  margin-top: 5rpx;
  word-break:break-all;
}
.cc_content{
  height: 60vh;
}

/* 弹幕 */
.aon{
position: absolute;
/* white-space:nowrap; */
font-size: 30rpx;
width: 500rpx;
word-break:break-all;
}
.doommview{
  z-index: 3;
  height: 10vh;
  width: 100%;
  top: 9%;
  /* background: #ccc; */
  position: absolute;
}
/**定义从右边向左边的移动的动画**/
@keyframes first{
  from{left: 100%;}
  to{left: -200%;}
}

.shareCard{
  width: 100%;
  height: 20vh;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  padding-top: 20rpx;
  z-index: 13;
  font-size: 28rpx;
  text-align: center;
}
.shareBtn {
  float: left;
  width: 100%;
  color: #f69811;
}
.share_p{
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin: 0 auto 10rpx;
}
.share_p image {
  width: 100%;
  height: 100%;
}
.create_pic{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 15;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.6);
}
.pics{
  width: 600rpx;
  height: 950rpx;
  margin: 0 auto;
  background: #ccc;
}
.pics image{
  width: 100%;
  height: 100%;
}
.closePic{
  font-size: 30rpx;
  color: #fff;
  text-align: right;
  padding: 20rpx;
}
.saveLocal{
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #fff;
  background: #dd5f1b;
  margin: 20rpx auto;
  border-radius: 10rpx;
  width: 200rpx;
  text-align: center;
}