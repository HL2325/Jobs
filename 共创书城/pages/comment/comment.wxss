/* pages/comment/comment.wxss */
.clear{
  clear: both;
}
.comment{
  padding: 0 30rpx;
}
.comment_list{
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.comment_pic{
  width: 180rpx;
  height: 180rpx;
  background: #ccc;
  float: left;
}
.comment_pic image{
  width: 100%;
  height: 100%;
}
.comment_right{
  float: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 480rpx;
}
.comment_title{
  font-size: 30rpx;
  color: #333;
}
.csm_title{
  font-size: 30rpx;
  margin-top: 5rpx;
}
.comment_time{
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
  float: right;
}
.csm_content{
  margin-top: 5rpx;
  color: #666;
}