/* pages/praise/praise.wxss */
.clear{
  clear: both;
}
.praise{
  padding: 0 30rpx;
}
.praise_list{
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.praise_pic{
  width: 180rpx;
  height: 180rpx;
  background: #ccc;
  float: left;
}
.praise_pic image{
  width: 100%;
  height: 100%;
}
.praise_right{
  float: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 480rpx;
}
.praise_title{
  font-size: 30rpx;
  color: #333;
  margin-top: 5rpx;
}
.csm_title{
  font-size: 30rpx;
  margin-top: 5rpx;
}
.praise_time{
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
  float: right;
}
.praise_btn{
  float: right;
  font-size: 28rpx;
}