/* pages/setting/setting.wxss */
.set_top{
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.clear{
  clear: both;
}
.set_pic{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
}
.set_pic image{
  width: 100%;
  height: 100%;
}
.choose_btn{
  font-size: 26rpx;
  width: 220rpx;
  margin: 20rpx auto 0;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid #f0f0f0;
  padding: 10rpx 0;
  color: #333;
}
.set_main{
  padding: 0 40rpx;
}
.set_list{
  font-size: 30rpx;
  margin-top: 20rpx;
  height: 70rpx;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
}
.set_labe{
  float: left;
  line-height: 80rpx;
  width: 160rpx;
}
.set_input{
  float: left;
  height: 100%;
  width: 450rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-left: 20rpx;
  line-height: 80rpx;
  color: #666;
}
.submit_save{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #dd5f1b;
  margin: 60rpx auto 0;
  border-radius: 10rpx;
}