/* pages/mine/mine.wxss */
.mine{
  width: 100%;
  height: 100%;
}
.clear{
  clear: both;
}
.mineTop{
  width: 100%;
  background: #5bb45a;
  height: 425rpx;
}
.mineUser{
  width: 100%;
  height: 260rpx;
  background: #fff;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  position: absolute;
  top: 160rpx;
  border: 1px solid rgba(0,0,0,0);
}
.userAvatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #ccc;
  position: absolute;
  top: -90rpx;
  left: 50rpx;
}
.userAvatar image{
  width: 100%;
  height: 100%;
}
.useridentity{
  position: absolute;
  padding: 8rpx 20rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  border: 1px solid #d9d9d9;
  background: #fff;
  left: 320rpx;
  top: -30rpx;
}
.userInfo{
  font-size: 30rpx;
  margin-top: 120rpx;
  margin-left: 50rpx;
}
.userName{
  display: inline-block;
  width: 180rpx;
  text-align: center;
}
.serial{
  margin-left: 90rpx;
}
.line{
  width: 100%;
  height: 10rpx;
  background: #f7f7f7;
}
.userlist{
  padding: 20rpx;
}
.listIcon{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 30rpx;
}
.userlist{
  font-size: 30rpx;
  line-height: 50rpx;
}
.top_text{
  margin-top: 100rpx;
  font-size: 32rpx;
  padding: 0 40rpx;
  line-height: 60rpx;
}