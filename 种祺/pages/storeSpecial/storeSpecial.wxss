/* pages/storeSpecial/storeSpecial.wxss */
.clear{
  clear: both;
}
.sSpecial{
  padding: 20rpx;
  font-size: 30rpx;
}
.sSpecialList{
  padding: 0 40rpx;
}
.sSpecialCard{
  width: 240rpx;
  border: 1px solid #5bb45a;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  color: #5bb45a;
  float: left;
  margin-right: 40rpx;
  margin-top: 20rpx;
  position: relative;
}
.sSpecialCard:nth-child(2n) {
  float: right;
}
.deleteIcon{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.addSpecial{
  margin-top: 20rpx;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.addSpecial input{
  float: left;
  height: 100%;
  margin-left: 20rpx;
  border-bottom: 1px solid #d9d9d9;
  text-align: center;
}
.addText {
  float: left;
}
.addBtn{
  float: right;
  margin-left: 20rpx;
  border: 1px solid #d9d9d9;
  width: 120rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height: 60rpx;
}
.line {
  height: 8rpx;
  background: #d9d9d9;
}
.jobholder{
  font-size: 30rpx;
  padding: 20rpx;
}
.addJob{
  float: right;
  border: 1px solid #d9d9d9;
  width: 100rpx;
  height: 50rpx;
  border-radius: 10rpx;
}
.addIcon{
  width: 30rpx;
  height: 30rpx;
  margin: 10rpx auto;
}
.addIcon image{
  width: 100%;
  height: 100%;
}
.jobList{
  margin-top: 10rpx;
}
.jobCard{
  float: left;
  margin-right: 35rpx;
  margin-top: 20rpx;
}
.jobPic{
  width: 100rpx;
  height: 100rpx;
  background: #ccc;
  border-radius: 50%;
  float: left;
  overflow: hidden;
}
.jobPic image{
  width: 100%;
  height: 100%;
}
.jobUserName{
  float: left;
  font-size: 26rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
}


.addJobMask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,.6);
  z-index: 11;
}
.JobMaskMain{
  width: 570rpx;
  /* height: 700rpx; */
  background: #fff;
  margin: 30% auto 0;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
}
.memberId{
  margin-top: 20rpx;
  font-size: 28rpx;
  float: left;
  height: 60rpx;
  line-height: 60rpx;
}
.memberNum{
  float: left;
}
.memberId input {
  height: 100%;
  border-bottom: 1px solid #d9d9d9;
  float: left;
  /* margin-left: 10rpx; */
  text-align: center;
}
.specialCard{
  margin-top: 20rpx;
  font-size: 28rpx;
}
.specialCardList input{
  border-bottom: 1px solid #d9d9d9;
  height: 60rpx;
  width: 400rpx;
  margin: 10rpx auto;
  text-align: center;
}
.onlyPrice{
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.priceText{
  float: left;
}
.onlyPrice input{
  float: left;
  height: 100%;
  border-bottom: 1px solid #d9d9d9;
  text-align: center;
}
.subJobBtn{
  width: 200rpx;
  background: #5bb45a;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  line-height: 60rpx;
  margin: 40rpx auto;
}
.closeMask{
  width: 30rpx;
  height: 30rpx;
  float: right;
}
.specialserve{
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx 20rpx;
  border-bottom: 1px solid #d9d9d9;
}
.specialservePic{
  width: 300rpx;
  height: 200rpx;
  background: #ccc;
  float: left;
  margin-right: 20rpx;
}
.specialservePic image {
  width: 100%;
  height: 100%;
}
.specialInfo{
  float: left;
  width: 350rpx;
}
.specilaTitle{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.specialintroduce{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.serverArea{
  border: 1px solid #d9d9d9;
  margin-top: 10rpx;
  height: 220rpx;
}
.servearea{
  width: 510rpx;
  padding: 10rpx 20rpx;
  height: 200rpx;
}
.specialCardTit{
  font-size: 28rpx;
}
.upPics{
  margin-top: 10rpx;
}
.upPicText {
  float: left;
}
.showPic{
  float: left;
  width: 220rpx;
  height: 160rpx;
  border: 1px solid #d9d9d9;
  margin-left: 20rpx;
  position: relative;
}
.upIcon{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  left: calc(50% - 40rpx);
  top: calc(50% - 40rpx);
}
.choosePic{
  width: 100%;
  height: 100%;
}