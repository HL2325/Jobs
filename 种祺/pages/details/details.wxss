/* pages/details/details.wxss */
.clear{
  clear: both;
}
.detailBanner{
  width: 100%;
  height: 400rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.botTitle{
  height: 60rpx;
  color: #fff;
  background: rgba(0,0,0,.7);
  font-size: 28rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}
.detailLocal{
  margin-top: 20rpx;
  padding:0 20rpx;
  line-height: 50rpx;
  margin-bottom: 40rpx;
}
.detailIcon{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 20rpx;
}
.detailinfo{
  float: left;
  font-size: 30rpx;
  width: 640rpx;
}
.introduce{
  font-size: 28rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
}
.introduceTit{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.line{
  margin: 10rpx 0;
  height: 10rpx;
  background: #ececec;
}
.tabTitle{
  width: 100%;
}
.tabName{
  float: left;
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #666;
}
.tabText{
  display: inline-block;
  border-bottom: 2px solid rgba(0,0,0,0);
  padding: 10rpx 20rpx;
}
.activeText{
  border-bottom: 2px solid #5bb45a;
  color: #5bb45a;
}
.phyList{
  padding: 10rpx 20rpx 20rpx;
  border-bottom: 1px solid #d9d9d9;
}
.phyListPic{
  width: 200rpx;
  height: 200rpx;
  background: #ccc;
  float: left;
  margin-right: 40rpx;
}
.phyListPic image {
  width: 100%;
  height: 100%;
}
.phyListText{
  float: left;
  width: 470rpx;
}
.phyTitle{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.tabMain{
  margin-bottom: 20rpx;
}
.phyCard{
  font-size: 26rpx;
  color: #5bb45a;
  margin-top: 80rpx;
}
.plistCard{
  border: 1px solid #5bb45a;
  border-radius: 20rpx;
  padding: 5rpx 20rpx;
  margin-right: 10rpx;
}
.specialserve{
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx 20rpx;
  border-bottom: 1px solid #d9d9d9;
}
.specialservePic{
  width: 300rpx;
  height: 200rpx;
  background: #ccc;
  float: left;
  margin-right: 40rpx;
}
.specialservePic image {
  width: 100%;
  height: 100%;
}
.specialInfo{
  float: left;
  width: 370rpx;
}
.specilaTitle{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.specialintroduce{
  font-size: 28rpx;
  margin-top: 10rpx;
}