.userCenter {
    width: 100%;
    height: 100%;
}

.clear {
    clear: both;
}

.userCard {
    width: 100%;
    height: 320rpx;
    background: #DD5F1B;
    padding-top: 80rpx;
    color: #fff;
    font-size: 28rpx;
    position: relative;
}

.userPic {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    float: left;
    margin: 0 60rpx;
    overflow: hidden;
}

.userPic image {
    width: 100%;
    height: 100%;
}

.userInfo {
    float: left;
}

.identity {
    width: 180rpx;
    text-align: center;
    padding: 4rpx 0;
    border: 1px solid #fff;
    border-radius: 10rpx;
    margin-top: 40rpx;
}

.phoneIcon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 0rpx;
}

.integral {
    padding: 10rpx 0;
    margin: 0 60rpx;
}

.botCard {
    width: 670rpx;
    height: 160rpx;
    position: absolute;
    left: 40rpx;
    bottom: -100rpx;
    background: #fff;
    box-shadow: 2px 2px 1px 0px rgba(170,170,170,.76);
    color: #333;
}

.mpIcon {
    width: 48rpx;
    height: 48rpx;
    margin: 56rpx 52rpx;
}

.mpCard {
    width: 100%;
    height: 100%;
}

.QRcodeIcon {
    width: 60rpx;
    height: 60rpx;
    float: left;
    margin-left: 100rpx;
}

.QRcodeIcon image {
    width: 100%;
    height: 100%;
}

.codeModal {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.71);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 11;
}

.codeMain {
    width: 604rpx;
    height: 820rpx;
    background: #fff;
    margin: 100rpx auto 0;
    padding: 40rpx;
}

.codeAva {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 30rpx;
    float: left;
}

.codeUser {
    float: left;
    font-size: 28rpx;
    margin-top: 25rpx;
}

.userLocal {
    color: rgba(16,16,16,.6);
    margin-top: 20rpx;
}

.codePic {
    width: 480rpx;
    height: 480rpx;
    margin: 40rpx auto;
}

.codePic image {
    width: 100%;
    height: 100%;
}

.closeIcon {
    float: right;
    width: 40rpx;
    height: 40rpx;
}

.meList {
    margin-top: 100rpx;
    padding: 20px;
}

.partnerList {
    border-bottom: 1px solid #ccc;
    line-height: 100rpx;
}

.partnerList image {
    width: 50rpx;
    height: 50rpx;
    padding-left: 20rpx;
    padding-top: 25rpx;
    float: left;
}

.listRight {
    float: right;
    font-size: 30rpx;
    padding-right: 30rpx;
}

.medal {
    float: left;
    margin-left: 100rpx;
}

.medal image {
    width: 50rpx;
    height: 50rpx;
}