.userCenter {
  width: 100%;
  height: 100%;
}

.clear {
  clear: both;
}

.userCard {
  width: 100%;
  height: 320rpx;
  background: #dd5f1b;
  padding-top: 50rpx;
  color: #fff;
  font-size: 28rpx;
  position: relative;
}

.userPic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  float: left;
  margin: 0 30rpx;
  overflow: hidden;
}

.userPic image {
  width: 100%;
  height: 100%;
}

.userInfo {
  float: left;
}

.identity {
  min-width: 180rpx;
  text-align: center;
  padding: 4rpx 0;
  border: 1px solid #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.phoneIcon {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  /* position: absolute; */
  left:70rpx;
  top: -10rpx;
}

.aredayText {
  font-size: 28rpx;
}

.integral {
  padding: 10rpx 0;
  margin: 0 60rpx;
}

.botCard {
  width: 670rpx;
  height: 160rpx;
  position: absolute;
  left: 40rpx;
  bottom: -100rpx;
  background: #fff;
  box-shadow: 2px 2px 1px 0px rgba(170, 170, 170, 0.76);
  color: #333;
}

.mpIcon {
  width: 48rpx;
  height: 48rpx;
  margin: 56rpx 52rpx;
}

.mpCard {
  width: 100%;
  height: 100%;
}

.QRcodeIcon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-left: 50rpx;
}

.QRcodeIcon image {
  width: 100%;
  height: 100%;
}

.codeModal {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.71);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 11;
}

.codeMain {
  width: 604rpx;
  height: 820rpx;
  background: #fff;
  margin: 100rpx auto 0;
  padding: 40rpx;
}

.codeAva {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  float: left;
}

.codeUser {
  float: left;
  font-size: 28rpx;
  margin-top: 25rpx;
}

.userLocal {
  color: rgba(16, 16, 16, 0.6);
  margin-top: 20rpx;
}

.codePic {
  width: 480rpx;
  height: 480rpx;
  margin: 40rpx auto;
}

.codePic image {
  width: 100%;
  height: 100%;
}

.closeIcon {
  float: right;
  width: 40rpx;
  height: 40rpx;
}

.meList {
  margin-top: 100rpx;
  padding: 20px;
}

.partnerList {
  border-bottom: 1px solid #ccc;
  line-height: 100rpx;
}

.partnerList image {
  width: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;
  padding-top: 25rpx;
  float: left;
}

.listRight {
  float: right;
  font-size: 30rpx;
  padding-right: 30rpx;
}

.medal {
  float: right;
  margin-right: 30rpx;
}

.medal image {
  width: 50rpx;
  height: 50rpx;
}
.identity_list .identity{
  margin-left: 20rpx;
}
.me_pic{
  padding: 0 40rpx;
  margin-top: 10rpx;
}
.card_pics{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-right: 20rpx;
  position: absolute;
}
.card_pics image{
  width: 100%;
  height: 100%;
}
.xxNum{
  position: absolute;
  font-size: 30rpx;
  color: #fff;
  left: 20rpx;
  top: 10rpx;
}
.xxmask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  position: fixed;
  left: 0;
  top: 0;
}
.maskMain{
  padding: 40rpx 50rpx;
}
.xxlist{
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin-right: 30rpx;
  margin-top: 40rpx;
}
.xxlist image {
  width: 100%;
  height: 100%;
}