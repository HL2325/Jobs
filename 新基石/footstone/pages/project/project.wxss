.project {
  width: 100%;
  height: 100%;
}

.clear {
  clear: both;
}

.searchTop {
  width: 100%;
  height: 104rpx;
  position: fixed;
  top: 0;
  background: #fff;
  left: 0;
  z-index: 13;
}

.searchInput {
  border: 1px solid #bbb;
  width: 550rpx;
  height: 80rpx;
  margin-top: 12rpx;
  margin: 12rpx 0;
  border-radius: 15rpx;
  margin-left: 20rpx;
  float: left;
}

.projectList {
  padding: 20rpx;
  border-bottom: 6rpx solid #eee;
  margin-bottom: 10rpx;
  background: #fff;
}

.projectPic {
  float: left;
  width: 240rpx;
  height: 156rpx;
  margin-right: 40rpx;
  position: relative;
  z-index: 11;
}

.projectPic image {
  width: 100%;
  height: 100%;
}

.projectTitle {
  font-size: 26rpx;
}

.pName {
  display: inline-block;
  width: 350rpx;
  font-size: 28rpx;
}

.createTime {
  float: right;
  margin-top: 20rpx;
}

.collectIcon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: -5rpx;
  right: 0;
}

.collectIcon image {
  width: 100%;
  height: 100%;
}

.sInput {
  width: 400rpx;
  height: 100%;
  float: left;
  padding-left: 40rpx;
}

.searchBtn {
  font-size: 32rpx;
  float: left;
  height: 80rpx;
  margin-top: 12rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  background: #dd5f1b;
  color: #fff;
}
.add_project{
  position: fixed;
  bottom: 40rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #dd5f1b;
  background: #f0f0f0;
}
.add_project image {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}
.pic_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.8);
  z-index: 12;
}

.pic_mask image{
  margin-top: 20vh;
}