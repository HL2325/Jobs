.project {
    width: 100%;
    height: 100%;
}

.clear {
    clear: both;
}

.searchTop {
    width: 100%;
    height: 104rpx;
    position: fixed;
    top: 0;
    background: #fff;
    left: 0;
    z-index: 11;
}

.searchInput {
    border: 1px solid #bbb;
    width: 550rpx;
    height: 80rpx;
    margin-top: 12rpx;
    margin: 12rpx 0;
    border-radius: 15rpx;
    margin-left: 20rpx;
    float: left;
}

.projectList {
    padding: 20rpx;
    border-bottom: 6rpx solid #eee;
    margin-bottom: 10rpx;
    background: #fff;
}

.projectPic {
    float: left;
    width: 240rpx;
    height: 156rpx;
    margin-right: 40rpx;
}

.projectPic image {
    width: 100%;
    height: 100%;
}

.projectTitle {
    font-size: 26rpx;
}

.pName {
    font-size: 28rpx;
}

.createTime {
    float: right;
    margin-top: 20rpx;
}

.collectIcon {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: -5rpx;
    right: 0;
}

.collectIcon image {
    width: 100%;
    height: 100%;
}

.sInput {
    width: 400rpx;
    height: 100%;
    float: left;
    padding-left: 40rpx;
}

.searchBtn {
    font-size: 32rpx;
    float: left;
    height: 80rpx;
    margin-top: 12rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    line-height: 80rpx;
    padding: 0 40rpx;
    background: #DD5F1B;
    color: #fff;
}