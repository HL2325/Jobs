/* pages/corigin/corigin.wxss */
.clear{
  clear: both;
}
.corigin{
  padding: 40rpx;
}
.corigin_list{
  font-size: 28rpx;
  height: 80rpx;
  border-bottom: 1px solid #f0f0f0;
  margin-top: 40rpx;
}
.corigin_list input{
  height: 100%;
  padding-left: 20rpx;
}
.corigin_area{
  margin-top: 40rpx;
  font-size: 28rpx;
  border:1px solid #f0f0f0;
}
.chanSub{
  font-size: 30rpx;
  width: 200rpx;
  background: #dd5f1b;
  padding: 20rpx 0;
  margin: 60rpx auto;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
.corigin_area textarea {
  min-height: 200rpx;
}

.uploadPic {
  margin-top: 20rpx;
  width: 100%;
}

.picture {
  width: 32%;
  height: 200rpx;
  float: left;
  margin-right: 2%;
  margin-top: 10rpx;
  position: relative;
}

.picture image {
  width: 100%;
  height: 100%;
}

.picture:nth-of-type(3n) {
  float: right;
  margin-right: 0;
}

.addPic {
  height: 200rpx;
  border: 1px solid #d9d9d9;
  float: left !important;
}

.addPic .addIcon {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx;
}

.addIcon image {
  width: 100%;
  height: 100%;
}

.proData {
  margin-top: 60rpx;
  border-top: 5rpx solid #ccc;
}

.proDataTit {
  font-size: 28rpx;
  color: #e43d23;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.deletPic{
  position: absolute;
  right: 0;
  top: 0;
  color: #666;
  padding: 0 20rpx;
  font-size: 38rpx;
}