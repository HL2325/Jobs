.originator {
    padding: 0 40rpx 60rpx;
}

.clear {
    clear: both;
}

.bigTitle {
    font-size: 32rpx;
    text-align: center;
}

.smallTitle {
    color: #f00;
    font-size: 28rpx;
    text-align: center;
    margin-top: 10rpx;
}

.originList {
    border-bottom: 1px solid #d9d9d9;
    height: 80rpx;
    margin-top: 20rpx;
}

.originList input {
    height: 100%;
    padding-left: 20rpx;
}

.originAgeInput {
    width: 43%;
    float: left;
    border-bottom: 1px solid #d9d9d9;
}

.experience,.case,.prointro {
    margin-top: 20rpx;
    height: 320rpx;
    font-size: 30rpx;
    border: 1px solid #d9d9d9;
    border-radius: 10rpx;
    padding: 0 10rpx;
}

.experience textarea {
    width: 100%;
    height: 100%;
}

.case {
    height: 450rpx;
}

.uploadPic {
    margin-top: 20rpx;
    width: 100%;
}

.picture {
    width: 32%;
    height: 200rpx;
    float: left;
    margin-right: 2%;
    margin-top: 10rpx;
}

.picture image {
    width: 100%;
    height: 100%;
}

.picture:nth-of-type(3n) {
    float: right;
    margin-right: 0;
}

.addPic {
    height: 200rpx;
    border: 1px solid #d9d9d9;
    float: left!important;
}

.addPic .addIcon {
    width: 80rpx;
    height: 80rpx;
    margin: 60rpx auto;
}

.addIcon image {
    width: 100%;
    height: 100%;
}

.proData {
    margin-top: 60rpx;
    border-top: 5rpx solid #ccc;
}

.proDataTit {
    font-size: 28rpx;
    color: #e43d23;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}

.submitOrigin {
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    background: #DD5F1B;
    border-radius: 10rpx;
    margin: 100rpx auto 0;
}