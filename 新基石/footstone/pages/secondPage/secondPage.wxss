/* pages/secondPage/secondPage.wxss */
.clear{
  clear: both;
}
.secondPage{
  padding: 20rpx 40rpx;
}
.bp_main{
  font-size: 30rpx;
  color: #333;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}
.bp_img{
  width: 32%;
  height: 200rpx;
  margin-top: 20rpx;
  float: left;
  margin-right: 1%;
}
.bp_img image {
  width: 100%;
  height: 100%;
}
.bp_title{
  color: #666;
  margin-bottom: 10rpx;
}
.pro_pic{
  float: left;
  width: 300rpx;
  height: 300rpx;
  margin-top: 40rpx;
  border: 1px solid #f0f0f0;
}
.pro_pic image {
  width: 260rpx;
  height: 260rpx;
  margin: 20rpx;
}
.pro_pic:nth-child(2n){
  float: right;
}
.pic_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.8);
  z-index: 12;
  display: flex;
  align-items: center;
}

