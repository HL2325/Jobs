.unauthorized {
    width: 100%;
    height: 100%;
}

.clear {
    clear: both;
}

.unCard {
    width: 100%;
    height: 320rpx;
    background: #DD5F1B;
    padding-top: 80rpx;
    color: #fff;
    font-size: 28rpx;
    position: relative;
}

.unHeadIcon {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #fff;
    float: left;
    margin: 0 40rpx 0 60rpx;
}

.unTitle {
    margin-top: 10rpx;
}

.botCard {
    width: 670rpx;
    height: 160rpx;
    position: absolute;
    left: 40rpx;
    bottom: -100rpx;
    background: #fff;
    box-shadow: 2px 2px 1px 0px rgba(170,170,170,.76);
}