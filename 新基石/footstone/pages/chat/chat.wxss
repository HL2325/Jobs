.chatList {
    border-bottom: 1px solid #d9d9d9;
    padding: 20rpx 60rpx;
}

.clear {
    clear: both;
}

.chatPic {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    float: left;
    margin-right: 60rpx;
    border: 1px solid #ccc;
}

.chatPic image {
    width: 100%;
    height: 100%;
}

.rightText {
    float: left;
    font-size: 30rpx;
}