.personDetail {
    padding: 20rpx 30rpx;
}

.clear {
    clear: both;
}

.userPic {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    float: left;
    overflow: hidden;
    margin-right: 80rpx;
}

.userPic image {
    width: 100%;
    height: 100%;
}

.userText {
    float: left;
    font-size: 32rpx;
    margin-top: 20rpx;
}

.userMain {
    margin-top: 30rpx;
    font-size: 30rpx;
}

.infoText {
    width: 50%;
    float: left;
}

.userSc {
    margin-top: 30rpx;
    font-size: 30rpx;
}

.experience {
    min-height: 200rpx;
    border: 1px solid #d9d9d9;
    margin-top: 20rpx;
    border-radius: 10rpx;
    padding: 20rpx;
}

.case {
    min-height: 300rpx;
    border: 1px solid #d9d9d9;
    margin-top: 20rpx;
    border-radius: 10rpx;
    padding: 20rpx;
}