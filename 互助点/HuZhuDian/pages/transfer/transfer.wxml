<text bindtap='fanhui' class='button {{tranfer_type}}' size="mini" >返回</text>
<view class='Outer_layer'>
  <view class='centre'>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <image class='image' src='../images/timg.jpg'></image>
      <view class="container">
        <view class="login-from">
          <!--账号-->
          <view class="inputView">
            <label class="loginLab">用户</label>
            <input class="inputText" name='username' value='{{name}}' placeholder="请输入对方账号" />
          </view>
          <view class="line"></view>
          <!--账号-->
          <view class="inputView">
            <label class="loginLab">RY</label>
            <input class="inputText" value='{{form_info}}' name='number' placeholder="转让互助点数量" />
          </view>
          <view class="line"></view>
          <!--密码-->
          <view class="inputView">
            <label class="loginLab">备注</label>
            <input class="inputText" name='remarks' value='{{form_info}}' placeholder="请输入备注" />
          </view>
          <view class="line"></view>
          <!--按钮-->
          <view class="loginBtnView">
            <button class="loginBtn" formType="submit" type="primary">确定转让</button>
          </view>
        </view>
      </view>
    </form>
  </view>
</view>