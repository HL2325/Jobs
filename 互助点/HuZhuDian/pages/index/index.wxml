<form bindsubmit="formSubmit" bindreset="formReset">
<view class="container">
  <view class="login-from">
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../images/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" name='username' placeholder="请输入账号"  />
    </view>
    <view class="line"></view>
    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../images/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" name='password' password="true" placeholder="请输入密码"  />
    </view>
    <view class="line"></view>
    <view class="goRegister">
      还没有账号吗？<navigator url="../register/register" style="color:blue;display:inline">点击注册</navigator>
      </view>
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" formType="submit" type="primary" >登录</button>
    </view>
  </view>
</view>
</form>