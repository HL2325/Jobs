/* pages/listDetail/listDetail.wxss */
@import "../../wxParse/wxParse.wxss";
.listDetail{
  border: 1px solid rgba(0,0,0,0);
  padding: 0 30rpx;
}
.detail_title{
  margin-top: 40rpx;
  font-size: 34rpx;
  font-weight: 500;
}
.detail_time{
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
.detail_main{
  font-size: 30rpx;
  margin-top: 40rpx;
}
.detail_pic{
  width: 100%;
  height: 400rpx;
  background: #ccc;
  margin-top: 30rpx;
}
.detail_pic image{
  width: 100%;
  height: 100%;
}
.wxParse-img{
  width: 100% !important;
}