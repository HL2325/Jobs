.clear{
  clear: both;
}
.home_top{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #d9d9d9;
}
.home_img{
  width: 340rpx;
  height: 220rpx;
  background: #ccc;
  float: left;
}
.home_img image {
  width: 100%;
  height: 100%;
}
.home_rtext{
  float: left;
  margin-left: 30rpx;
  width: 300rpx;
  height: 220rpx;
  font-size: 30rpx;
  position: relative;
}
