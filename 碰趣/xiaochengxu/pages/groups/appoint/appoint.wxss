/* pages/appoint/appoint.wxss */
.appoint{
  width: 95%;
  height: auto;
  margin: auto;
}
.add_List{
  width: 100%;
  background: #f2f2f2;
}
.add_single{
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  padding: 10rpx 0;
}
.banner-image{
  width: 200rpx;
  height: 100%;
  margin-left: 20rpx;
  float: left;
}
.Title{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 28rpx;
  margin-top: 6rpx;
  padding-left: 10rpx;
}
.Title_1{
  font-size: 30rpx;
}
.Title_2{
  font-size: 30rpx;
  margin-left: 30rpx;
}
.head{
  width: 100%;
  height: 180rpx;
  margin-top: 40rpx;
}
.head text{
  display: block;
}
.member{
  margin: 40rpx 0;
}
.flex-row{
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.head-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}
.flex-view-item{
  width: 140rpx;
  height: 170rpx;
}
.flex-view-item image{
  display: block;
  margin: auto;
}
.flex-view-item text{
  display: block;
  text-align: center;
  font-size: 30rpx;
  margin-top: 15rpx;
}


