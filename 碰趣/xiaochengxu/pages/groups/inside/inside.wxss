/* pages/inside/inside.wxss */

.inside {
  width: 95%;
  height: auto;
  margin: auto;
}

.Remind {
  font-size: 30rpx;
  display: block;
  padding: 30rpx 0;
  color: #fa5757;
}

.add_List {
  width: 100%;
  background: #f2f2f2;
}

.add_single {
  width: 100%;
  height: 410rpx;
  padding: 10rpx 0;
}

.banner-image {
  width: 200rpx;
  height: 100%;
  margin-left: 20rpx;
  float: left;
}

.Title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
}
.Title_jian{
  width: 95%;
  text-indent:2em;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  /*行数*/
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  margin: auto;
}
.Title_1 {
  font-size: 36rpx;
}
.Title_2 {
  font-size: 40rpx;
  margin-left: 30rpx;
}
.head {
  width: 100%;
  height: 180rpx;
  margin-top: 10rpx;
}

.head text {
  display: block;
}

.member {
  margin: 10rpx 0;
}
.member text{
  font-size: 33rpx;
}
.flex-row {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.head-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.flex-view-item {
  width: 140rpx;
  height: 170rpx;
}

.flex-view-item image {
  display: block;
  margin: auto;
}

.flex-view-item text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  margin-top: 15rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.statement {
  width: 100%;
  margin: 50rpx 0rpx;
}

.statement text {
  display: block;
  line-height: 80rpx;
  height: 80rpx;
}

.submit-btn {
  background: #fa5757;
  border-radius: 30rpx;
  color: #fff;
}
