/* pages/addtrip/addtrip.wxss */

.warp {
  margin-bottom: 10rpx
}

.nav {
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background: #f2f2f2;
  margin: 0 auto;
  border-radius: 50rpx;
}

.default {
  line-height: 80rpx;
  text-align: center;
  flex: 1;
  color: #fa5757;
  font-weight: bold;
  font-size: 36rpx;
}

.red {
  line-height: 80rpx;
  text-align: center;
  color: #FFF;
  flex: 1;
  font-weight: bold;
  font-size: 36rpx;
  background: #fa5757;
  border-radius: 50rpx;
}

/* 候选列表 */

.show {
  display: block;
  margin-top: 20rpx;
}

.weui-search-bar__box {
  width: 95%;
  height: 70rpx;
  margin: auto;
  border: 1rpx solid #dbdbdb;
  border-radius: 20rpx;
}

.weui-icon-search_in-box {
  float: left;
  margin-left: 20rpx;
  margin-top: 23rpx;
}

.weui-search-bar__input {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.add_List {
  width: 95%;
  margin: auto;
  background: #f2f2f2;
}

.add_List button {
  width: 600rpx;
  background: none;
  height: 60rpx;
  line-height: 60rpx;
  background: #fa5757;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.add_single {
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  padding: 10rpx 0;
}

.banner-image {
  width: 200rpx;
  height: 100%;
  margin-left: 20rpx;
  float: left;
}
.Title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
}

.Title_1 {
  font-size: 30rpx;
}

.Title_2 {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.fouter {
  background: #fa5757;
  border-radius: 40rpx;
  width: 95%;
  height: 80rpx;
  margin: 80rpx auto 0 auto;
  text-align: center;
  line-height: 80rpx;
  color: #FFF;
  font-size: 36rpx;
}

/* 已选主题 */

.hidden {
  display: none;
}

.remove_List {
  width: 95%;
  height: auto;
  margin: auto;
}

.remove_Title {
  display: block;
  font-size: 40rpx;
  color: #e5c51b;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 50rpx;
}

.List_same {
  width: 100%;
  height: 450rpx;
}

.List_left {
  float: left;
  width: 80rpx;
  height: 450rpx;
  overflow: hidden
}

.left-image {
  width: 30rpx;
  height: 450rpx;
  display: block;
  margin: auto;
}

.List_right {
  float: left;
  width: 600rpx;
  height: 440rpx;
}
.List_time{
  font-size: 36rpx;
}
.List_content {
  margin-top: 5rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*行数*/
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.remove {
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fa5757;
  text-align: center;
  margin-top: 20rpx;
  border-radius: 50rpx;
  color:#fff;
  font-size: 30rpx;
}