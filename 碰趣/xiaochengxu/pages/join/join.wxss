/* pages/join/join.wxss */
.line{
	height:80rpx;
	width:100%;
	font-size:33rpx;
	color:#DD5F1B;
	line-height:80rpx;
	text-align:center;
}
 .peach{
	height:418rpx;
	width:100%;
}
 .peach image{
	height:100%;
	width:100%;	
}
.join{
  width: 95%;
  margin: auto;
  display: block;
  background: #f2f2f2;
}
.join  .detail{
  width: 95%;
  margin: auto;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.join .detail .d-title{
  display: block;
  font-size:35rpx;
  color:#fa5757;
  font-weight: bold;
  margin:0 0 33rpx 10rpx;
}
.join .detail .d-main{
  border-bottom: 2rpx solid #ddd;
  padding:0 0 40rpx 0;
  box-sizing:border-box;
  overflow: hidden;    
}
.join .detail .d-main text{
  display: block;
  margin:0 0 17rpx 10rpx;
  font-size: 32rpx;
  color:#333;
}
.join .detail .d-main .last{
  margin-bottom:0;
}
.join .d-more .d-list{
	font-size: 32rpx;
	color:#333333;
	line-height:52rpx;
}
.join .d-list .sub,.d-list .name{
	float:left;
}
.join .d-list .sub{
	clear:both;
  margin-bottom:10rpx;
}
.join .d-list .name{
	color:#333333;
	padding-left:36rpx;
  margin-bottom:23rpx;
}
.join .d-list .name text{
	padding-left:28rpx;
}
.join .d-list .first{
	padding-left:66rpx;
}
.join .d-list .last{
	padding-left:32rpx;
}
.join .d-list .space{
  margin-bottom:0;
}
.join .d-more .cert{
  height: 32rpx;
  width:106rpx;
  border:2rpx solid #DD5F1B;
  color: #DD5F1B;
  font-size:25rpx;
  text-align: center;
  line-height:32rpx;
  margin-right:20rpx;
  float: right;
}
.join .goTouch{
	height:1rpx;
	width:100%;
	clear:both;
}
.join .buttom{
	height:126rpx;
	border-top:2px solid #dddddd;
	position:fixed;
	bottom:0;
	left:0;
}
.buttom .touchDay,.buttom .find,.buttom .my{
	width:250rpx;
	height:100%;
	float:left;
	text-align:center;
	font-size:20rpx;
	color:#666666;
	background:#fff;
}
.touchDay image{
	width:42rpx;
	height:42rpx;
	margin-top:20rpx;
	margin-bottom:10rpx;
}
.touchDay view{
	color:#fa5757;
}
.find image{
	width:49rpx;
	height:42rpx;
	margin-top:21rpx;
	margin-bottom:10rpx;
}
.my image{
	width:35rpx;
	height:40rpx;
	margin-top:22rpx;
	margin-bottom:10rpx;
}
.line_kung{
  height:20rpx;
	width:100%;
	clear:both;
  background: #FFFFFF;
}
.bottom .footer {
  background: #fa5757;
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 0 auto 0 auto;
  position:fixed;
  bottom:100rpx;
}
.goTouch_cj{
  height:210rpx;
	width:100%;
	clear:both;
}