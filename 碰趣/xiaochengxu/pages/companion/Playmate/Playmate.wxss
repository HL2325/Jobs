  height: 80rpx;
  margin: auto;
}
.Popular_Touch button{
  float: left;
  width: 80%;
  height: 80rpx;
  text-align:center;
  line-height: 80rpx;
  margin-left: 10%;
  margin-top: 40rpx;
  background: #FFFFFF;
  border: #000000 solid 1rpx;
}
