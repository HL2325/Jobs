/* pages/companion/Contacts/Contacts.wxss */

page{
  background: #FFFFFF;
}
.Contacts{
  width: 95%;
  margin: auto;
  padding-top: 20rpx;
  padding-bottom: 100rpx;
}
.people_left{
  float: left;
}
.people_right{
  float: right;
}
.place-left{
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 50%;
}
.place-right{
  width: 100rpx;
  height: 100rpx;
  float: right;
  border-radius: 50%;
}
.people_left view{
  background: #f2f2f2;
  float: left;
  max-width: 520rpx;
  font-size: 36rpx;
  padding: 20rpx 35rpx;
  border-radius: 20rpx 10rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  color: #000000;
}
.people_right view{
  background: #ffffcc;
  float: right;
  max-width: 520rpx;
  font-size: 36rpx;
  padding: 20rpx 35rpx;
  border-radius: 10rpx 20rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  color: #000000;
}
.Split{
  float: left;
  width: 100%;
  height: 5rpx;
  display: block;
}
.bottom {
  position:fixed;
  bottom: 0rpx;
  width: 100%;
  height: 80rpx;
  background: #f2f2f2;
}
.footer{
  position:fixed;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 36rpx;
  background: #fa5757;
  height: 80rpx;
  width: 20%;
  right: 0rpx;
}
.bottom textarea{
  position:fixed;
  width: 80%;
  height: 80rpx;
  font-size: 30rpx;
  border-top: #999999 solid 4rpx;
  left: 0rpx;
}


