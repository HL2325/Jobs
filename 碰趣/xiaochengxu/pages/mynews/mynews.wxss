/* pages/mynews/mynews.wxss */


.Stay{
  width: 95%;
  margin: auto;
  height: auto;
}
.Head{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #DD5F1B;
  color: #FFFFFF;
}
.man{
  overflow: hidden;
  padding:37rpx 0 31rpx 0;
  box-sizing: border-box;
  border-bottom:2rpx solid #ddd;
}
.man image{
  float: left;
  height: 85rpx;
  width:85rpx;
  border-radius: 50%;
}
.slim{
  float: right;
  width:calc(100% - 119rpx); 
}
.man .name1{
  font-size:34rpx;
  color:#444;
  margin:0 33rpx 0 0;
}
.man .time{
  float: right;
  font-size:27rpx;
  color:#959595;
  margin:0 8rpx 0 0;
}
.man .help{
  font-size:28rpx;
  color:#999;
  margin:16rpx 0 0;
}

