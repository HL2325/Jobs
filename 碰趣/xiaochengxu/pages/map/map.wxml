<view class="map">
  <map 
    id="map" 
    latitude='{{lat}}'
    longitude='{{lon}}'
    scale="14" 
    markers="{{markers}}"
    controls="{{controls}}"
    show-location="true"
    style="width: 100%; height: 1500rpx;"
    bindmarkertap="showDetails"
    bindcallouttap="showDetails"
    bindcontroltap="goCreate"
  >
  </map>
 
</view>
