/* pages/active/active.wxss */

.chat-theme{
  display: block;
  height: 150rpx;
  width: 100%;
}
.active .ft {
  width: 100%;
  position: fixed;
  bottom: 98rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;

}


.active .ft view {
  float: left;
  padding: 32rpx 0;
  box-sizing: border-box;
  /* width:calc(50% - 1rpx); */
  width: 100%;
  text-align: center;
  line-height: 1;
  color: white;
  font-size: 33rpx;
}

.active .ft .add {
  background: #fa5757;
  border-right: 2rpx solid #fff;
}

.active .ft .volun {
  background: #00bddb;
}

.comment {
  width: 100%;
  background: #f5f5f5;
   
  line-height: 100rpx;
  padding:0;
  margin: 0;
}

.comment input {
  margin: 0 auto;
  width: 95%;
  height: 80rpx;
  background: #fff;
   text-align: left;
   font-size:0.8rem;
}
.head_head{
  width: 95%;
  margin: auto;
  height: 130rpx;
  background: #FFFFFF;
}
.head-image{
  margin-left: 20rpx;
  margin-top: 10rpx;
}