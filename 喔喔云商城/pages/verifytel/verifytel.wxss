/* pages/verifytel/verifytel.wxss */
.clear{
  clear: both;
}
.verifyTel{
  border: 1px solid rgba(0,0,0,0);
}
.tel_list{
  height: 80rpx;
  padding: 0 40rpx;
  margin-top: 40rpx;
}
.tel_label{
  float: left;
  font-size: 32rpx;
  height: 100%;
  line-height: 80rpx;
  width: 150rpx;
  color: #F68B0E;
}
.tel_num{
  float: left;
  font-size: 30rpx;
  padding-left: 20rpx;
  height: 100%;
  border-bottom: 1px solid #f0f0f0;
  width: 450rpx;
}
.verify_num{
  font-size: 30rpx;
  height: 100%;
  width: 220rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-left: 20rpx;
  float: left;
}
.get_code{
  width: 160rpx;
  font-size: 26rpx;
  float: right;
  padding: 0;
  background-color: #F68B0E;
  border-radius: none;
  border: none;
  color: #fff;
}
.verifyBtn{
  width: 200rpx;
  height: 80rpx;
  font-size: 32rpx;
  background: #F68B0E;
  text-align: center;
  line-height: 80rpx; 
  color: #fff;
  border-radius: 10rpx;
  margin: 100rpx auto 0;
}