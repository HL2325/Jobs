/* pages/detail/detail.wxss */
@import "../../wxParse/wxParse.wxss";
page {
  background: #f6f6f6;
}

.d_pic {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.clear {
  clear: both;
}

.swiper_pic {
  width: 100%;
  height: 100%;
}

.swiper_pic image {
  width: 100%;
  height: 100%;
}

.banNum {
  width: 72rpx;
  height: 40rpx;
  font-size: 24rpx;
  background: rgba(25, 31, 37, 0.7);
  border-radius: 20rpx;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  text-align: center;
  line-height: 40rpx;
}

.d_commodity {
  padding: 24rpx 30rpx 21rpx;
  background: #fff;
}

.dc_text {
  color: #191f25;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  margin-bottom: 9rpx;
}

.dc_price {
  float: left;
  font-size: 40rpx;
  font-weight: 600;
  color: #f68b0e;
  line-height: 56rpx;
}

.decimal {
  font-size: 30rpx;
  color: #f68b0e;
}

.dc_storage {
  font-size: 24rpx;
  color: #666;
  float: left;
  line-height: 60rpx;
  margin-left: 40rpx;
}

.delivery {
  float: right;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #f68b0e;
  font-weight: 400;
  padding: 4rpx 10rpx;
  border: 1rpx solid #f68b0e;
  border-radius: 4rpx;
  margin-top: 10rpx;
}

.dc_introduce {
  margin-top: 30rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 400;
  color: #191f25;
  text-align: center;
  padding: 30rpx 0;
}

.botBtn {
  position: fixed;
  height: 98rpx;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
}

.dc_customer {
  width: 33%;
  height: 100%;
  background: #fff;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 98rpx;
  color: rgba(25, 31, 37, 0.72);
  text-align: center;
  /* padding: 0 57rpx; */
  float: left;
}

.wcIcon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 18rpx;
}

.dc_buy {
  font-size: 36rpx;
  font-weight: 400;
  float: left;
  background: #f68b0e;
  text-align: center;
  width: 67%;
  height: 100%;
  color: #fff;
  line-height: 98rpx;
}

.detail_image {
  width: 100%;
  height: 585rpx;
  margin-top: 20rpx;
}

.detail_image image {
  width: 100%;
  height: 100%;
}

.detail_main {
  padding-bottom: 100rpx;
}

.botp_left {
  float: left;
  width: 200rpx;
  height: 200rpx;
}

.bot_popup {
  padding: 30rpx;
}

.botp_left image {
  width: 100%;
  height: 100%;
}

.botp_info {
  float: left;
  margin-left: 30rpx;
  width: 360rpx;
  text-align: left;
}

.botp_des {
  color: #191f25;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 600;
  height: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.botp_price{
  margin-top: 24rpx;
}
.price_num{
  color: #F68B0E;
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: 600;
}
.price_stock{
  color: rgba(25,31,37,0.3);
  font-size: 24rpx;
  line-height: 33rpx;
  margin-left: 54rpx;
}
.botp_top{
  padding-bottom: 40rpx;
  border-bottom: 1px solid rgba(25,31,37,0.12);
}
.buynum_text{
  font-size: 24rpx;
  line-height: 60rpx;
  color:rgba(25,31,37,0.56);
  font-weight: 400;
  float: left;
}
.buy_nums{
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}
.buynum_add{
  float: right;
  height: 60rpx;
  width: 210rpx;
  border: 1px solid rgba(25,31,37,0.12);
  border-radius: 8rpx;
}
.buy_subtract{
  width: 60rpx;
  height: 60rpx;
  border-right: 1px solid rgba(25,31,37,0.12);
  float: left;
}
.buy_add{
  width: 60rpx;
  height: 60rpx;
  border-left: 1px solid rgba(25,31,37,0.12);
  float: right;
}
.buy_add image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
}
.buy_subtract image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
}
.add_sub_nums{
  float: left;
  text-align: center;
  line-height: 60rpx;
  width: 86rpx;
}
.buy_order_submit{
  width: 670rpx;
  height: 94rpx;
  line-height: 94rpx;
  color: #fff;
  background: #F68B0E;
  border-radius: 10rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
}
.btn_service{
  width: 100% !important;
  height: 100% !important;
  border-radius: 0;
  background: #fff;
  font-size: 28rpx;
  color:rgba(25,31,37,0.72);
  line-height: 98rpx;
}
.btn_service::after{
  border: none;
}
.introduce_text{
  padding: 20rpx 30rpx 40rpx;
  background: #fff;
  font-size: 30rpx;
  color: #666;
}