/* pages/delivery/delivery.wxss */
page{
  background: #f6f6f6;
}
.clear{
  clear: both;
}
.top_pic{
  width: 100%;
  height: 10rpx;
}
.top_pic image{
  width: 100%;
  height: 100%;
  float: left;
}
.d_address{
  padding: 30rpx 20rpx 20rpx;
  background: #FFF9F1;
}
.d_left{
  float: left;
}
.add_address{
  float: left;
}
.add_icon{
  width: 32rpx;
  height: 32rpx;
  float: left;
  margin-top: 6rpx;
}
.add_text{
  color: #F68B0E;
  font-size: 32rpx;
  line-height:45rpx;
  float: left;
  margin-left: 20rpx;
}
.d_right_icon{
  width: 28rpx;
  height: 28rpx;
  float: right;
}
.d_right_icon image{
  width: 100%;
  height: 100%;
}
.d_right{
  float: right;
  width: 28rpx;
  height: 28rpx;
  margin-top: 30rpx;
}
.d_right image{
  width: 100%;
  height: 100%;
}
.d_title{
  color:rgba(25,31,37,0.72);
  font-size: 32rpx;
  line-height: 45rpx;
}
.user_name{
  font-weight: 600;
  float: left;
  width: 140rpx;
  text-align: center;
}
.user_tel{
  font-weight: 400;
  margin-left: 30rpx;
}
.d_local_text{
  margin-top: 20rpx;
}
.d_default{
  width: 140rpx;
  float: left;
}
.d_default_text{
  width: 64rpx;
  text-align: center;
  font-size: 20rpx;
  color: #F68B0E;
  border: 1px solid #F68B0E;
  border-radius: 4rpx;
  padding: 4rpx 0;
  margin: 0 auto;
}
.d_detailed{
  width: 480rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color:rgba(25,31,37,0.4);
  float: left;
  margin-left: 30rpx;
}
.commodity_add{
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(25,31,37,0.12);
}
.addr_icon{
  float: right;
  width: 30rpx;
  height: 30rpx;
  padding-right: 30rpx;
}
.addr_icon image{
  width: 100%;
  height: 100%;
  float: left;
}
.commodity_text{
  float: right;
  font-size: 28rpx;
  color: rgba(25,31,37,0.4);
  line-height: 33rpx;
  margin-right: 12rpx;
}
.commodity_list{
  padding: 30rpx;
  background: #fff;
}
.commodity_left{
  float: left;
}
.commodity_right{
  float: left;
  margin-left: 20rpx;
}
.commodity_left{
  width: 160rpx;
  height: 160rpx;
}
.commodity_left image{
  width: 100%;
  height: 100%;
}
.comityr_des{
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(25,31,37,0.72);
  font-weight: 400;
  width: 510rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.comityr_info{
  margin-top: 35rpx;
}
.comityr_price{
  font-size: 36rpx;
  color: rgba(25,31,37,0.72);
  margin-right: 30rpx;
}
.comityr_num{
  font-size: 24rpx;
  color: #999;
}
.chose_time{
  margin-top: 20rpx;
  background: #fff;
  padding: 12rpx 30rpx;
}
.time_left{
  font-size: 28rpx;
  font-weight:400;
  line-height: 44rpx;
  margin-top: 12rpx;
  float: left;
  color:rgba(25,31,37,0.72);
}
.time_btn{
  float: right;
  width: 160rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 8rpx;
  background: #F68B0E;
  padding: 12rpx 0;
}
.choyear_card{
  background: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.year_list{
  border-bottom: 1px solid #f0f0f0;
}
.cy_l{
  padding: 20rpx 0;
}
.radio{
  display: block;
  width: 100%;
  padding: 10rpx 0;
}
.radio_text{
  color: rgba(25,31,37,0.72);
  font-size: 28rpx;
  line-height: 64rpx;
  margin-left: 10rpx;
}
.cho_egg{
  color: #F68B0E;
  font-size: 24rpx;
  line-height:33rpx;
  margin-top: 30rpx;
}
.cho_entries{
  margin-top: 15rpx;
  font-size: 28rpx;
  color:rgba(25,31,37,0.72);
  padding-bottom: 30rpx;
}
.entries_des{
  font-size: 24rpx;
  color:rgba(25,31,37,0.4);
}
.bot_bar{
  position: fixed;
  width: 100%;
  height: 98rpx;
  left: 0;
  bottom: 0;
  background: #fff;
}
.all_info{
  width: 60%;
  height: 88rpx;
  margin-top: 10rpx;
  float: left;
}
.bot_sub{
  float: left;
  text-align: center;
  background: #F68B0E;
  color: #fff;
  font-size: 36rpx;
  line-height: 98rpx;
  width: 40%;
  height: 100%;
}
.first_price{
  padding-left: 40rpx;
  float: left;
}
.aprice{
  font-size: 30rpx;
  color:rgba(25,31,37,0.72);
  line-height: 50rpx;
}
.price_num{
  color: #F68B0E;
  font-size: 36rpx;
  float: left;
}
.allb_text{
  font-size: 20rpx;
  color: rgba(25,31,37,0.28);
  padding-left: 40rpx;
}
.entries_left{
  float: left;
}
.entries_right{
  float: right;
}