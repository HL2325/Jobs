/**index.wxss**/
page{
  background: #F6F6F6;
}
.home{
  border: 1px solid #F6F6F6;
}
.clear{
  clear: both;
}
.home_leading{
  width: 690rpx;
  height: 360rpx;
  /* box-shadow:0px 8rpx 16rpx 0rpx rgba(232,108,17,0.5); */
  border-radius:12rpx;
  margin: 30rpx auto 0;
  overflow: hidden;
}
.leading_pic{
  width: 100%;
  height: 100%;
}
.hr_title{
  margin: 40rpx 0 30rpx 0;
  font-weight:600;
  color:rgba(25,31,37,0.72);
  line-height:42rpx;
  font-size: 30rpx;
  text-align: center;
}
.hl_card{
  padding: 0 30rpx;
}
.hl_list{
  width: 330rpx;
  float: left;
  border-radius:12rpx;
  overflow: hidden;
  /* box-shadow: 2px 2px 15px #ccc; */
  background: #fff;
  margin-bottom: 32rpx;
}
.hl_list:nth-of-type(2n) {
  float: right;
}
.hl_pic{
  width: 100%;
  height: 330rpx;
}
.hl_pic image{
  width: 100%;
  height: 100%;
}
.hf_title{
  padding: 0 20rpx;
  /* width: 100%; */
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #191F25;
  font-weight: 400;
  margin-top: 14rpx;
}
.hfs_tit{
  margin-top: 10rpx;
  /* float: left; */
  line-height: 42rpx;
  font-weight: 600;
  padding: 0 20rpx 10rpx;
}
.hf_price{
  font-size: 32rpx;
  color: #F68B0E;
}
.hf_keep{
  font-size: 22rpx;
  color: #666;
  line-height: 28rpx;
  font-weight: normal;
  float: right;
  margin-top: 8rpx;
}
.noData{
  color:rgba(25,31,37,0.28);
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}