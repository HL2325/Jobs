/* pages/yearcard/yearcard.wxss */
page{
  background: #f6f6f6;
}
.clear{
  clear: both;
}
.card{
  border: 1px solid #f6f6f6;
}
.c_list{
  background: #ccc;
  /* background-image: url('http://wowo.zhaodaka.vip/static/backCard.png'); */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 690rpx;
  height: 386rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 30rpx auto 30rpx;
  box-shadow:0px 8px 16px 0px rgba(232,108,17,0.58);
  margin-bottom: 60rpx;
}
.cl_top{
  padding: 40rpx 40rpx 0 50rpx;
}
.card_info{
  width: 260rpx;
  margin: 120rpx auto 0;
  background: #F68B0E;
  border-radius: 10rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
}
.cl_btit{
  font-size: 44rpx;
  font-weight: 600;
  color:rgba(255,255,255,1);
  line-height:62rpx;
  text-shadow:0px 3px 6px rgba(183,90,25,0.2);
  background:linear-gradient(180deg, rgba(255,255,255,1) 0%, rgba(249,239,211,0.75) 100%);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
  float: left;
}
.allNum{
  float: right;
  font-size: 26rpx;
  font-weight: 400;
  color :rgba(255,255,255,1);
  line-height: 33rpx;
  text-shadow: 0rpx 3px 6px rgba(183,90,25,0.63);
  margin-top: 10rpx;
}
.create_date{
  margin-top: 200rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #fff;
  text-shadow:0px 3px 6px rgba(183,90,25,0.63);
  line-height: 33rpx;
  margin-left: 66rpx;
}
.card_top{
  width: 100%;
  height: 98rpx;
  border: 1px solid #f0f0f0;
  position: fixed;
  background: #fff;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
}
.place_order{
  float: left;
  width: 33.33%;
  padding: 20rpx 0;
}
/* .activate_card{
  width: 40%;
} */
.card_icon{
  width: 60rpx;
  height: 60rpx;
  float: left;
}
.card_text{
  float: left;
  font-size: 28rpx;
  color: rgba(25,31,37,0.72);
  line-height: 60rpx;
  margin-left: 10rpx;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.5);
}
.mask_card{
  width: 540rpx;
  height: 450rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 350rpx auto;
}
.closeIcon{
  width: 30rpx;
  height: 30rpx;
  float: right;
}
.mc_title{
  padding: 20rpx;
}
.mc_main{
  padding: 0 20rpx;
}
.radio_title{
  font-size: 28rpx;
  color:rgba(25,31,37,0.72);
  line-height: 40rpx;
  margin-left: 18rpx;
}
.radio_info{
  color: #F68B0E;
  font-size: 24rpx;
  line-height: 33rpx;
  margin-top: 10rpx;
  margin-left: 18rpx;
}
.radio_list{
  margin-bottom: 40rpx;
}
.buy_btn{
  border-radius:8rpx;
  line-height: 64rpx;
  background: #F68B0E;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  width: 240rpx;
  margin: 30rpx auto 0;
}
.top_tab{
  width: 200rpx;
  margin: 0 auto;
}
.activate_tab{
  width: 220rpx;
  margin: 0 auto;
}
.maskActive{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5);
}
.active_main{
  width: 650rpx;
  padding-bottom: 60rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 140rpx auto 0;
}
.active_close{
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.active_close image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.active_title{
  text-align: center;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 80rpx;
}
.active_input{
  height: 80rpx;
  width: 500rpx;
  margin: 40rpx auto 0;
  font-size: 28rpx;
  border-bottom: 1px solid #f0f0f0;
}
.active_input input{
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
}
.active_btn{
  width: 200rpx;
  padding: 20rpx 0;
  background: #F68B0E;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  margin: 100rpx auto 0;
}
.end_toast{
  font-size: 26rpx;
  color: #fff;
  margin-top: 5rpx;
  padding-left: 50rpx;
}