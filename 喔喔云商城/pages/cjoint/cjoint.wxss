/* pages/cjoint/cjoint.wxss */
page{
  background: #f6f6f6;
}
.cjoint_list{
  padding:0 30rpx;
  background: #fff;
  /* border-bottom: 1px solid rgba(25,31,37,0.12); */
}
.check_pic{
  width: 160rpx;
  height: 160rpx;
  float: left;
  margin-left: 20rpx;
}
.check_pic image{
  width: 100%;
  height: 100%;
  float: left;
}
.checks{
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(25,31,37,0.12);
  width: 100%;
}
.check_info{
  float: left;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(25,31,37,0.72);
  font-weight: 400;
  width: 430rpx;
  margin-left: 20rpx;
}
.check_text{
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.check_num{
  margin-top: 34rpx;
}
.check_price{
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: 400;
  color:rgba(25,31,37,0.72);
}
.check_enters{
  margin-left: 30rpx;
  line-height:33rpx;
  color: #999;
  font-size: 24rpx;
}
.check_date{
  float: right;
  font-size:20rpx;
  line-height:28rpx;
  margin-top: 18rpx;
}
.check_bar{
  width: 100%;
  height: 98rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.cbar_right{
  float: right;
  width: 40%;
  text-align: center;
  color: #fff;
  line-height: 98rpx;
  font-size: 36rpx;
  font-weight: 400;
  background: #98cdc6;
}