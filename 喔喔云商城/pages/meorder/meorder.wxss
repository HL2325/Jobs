/* pages/meorder/meorder.wxss */

page {
  background: #f6f6f6;
}

.clear {
  clear: both;
}

.meorder_tab {
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-bottom: 10rpx;
}

.top_tab {
  width: 33.33%;
  text-align: center;
  color: rgba(25, 31, 37, 0.4);
  font-size: 30rpx;
  font-weight: 400;
}

.tab_text {
  display: inline-block;
  line-height: 42rpx;
  padding: 20rpx 6rpx 15rpx;
  border-bottom: 4rpx solid #fff;
}

.actives {
  color: #98cdc6;
}

.active_bot {
  border-bottom: 4rpx solid #98cdc6;
}

.meorder_main {
  /* margin-top: 20rpx; */
  /* padding: 20rpx 0; */
  /* background: #fff; */
  padding-bottom: 20rpx;
  margin-top: 20rpx;
}

.main_top {
  border-bottom: 1rpx solid rgba(25, 31, 37, 0.12);
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
}

.order_num {
  color: rgba(25, 31, 37, 0.4);
  font-weight: 400;
  font-size: 24rpx;
  line-height: 33rpx;
  float: left;
}

.await_label {
  float: right;
  line-height: 33rpx;
  font-weight: 400;
  color: #98cdc6;
  font-size: 24rpx;
}

.main_shop {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(25, 31, 37, 0.12);
}

.ms_left {
  float: left;
  width: 160rpx;
  height: 160rpx;
}

.ms_left image {
  width: 100%;
  height: 100%;
}

.ms_right {
  float: left;
  margin-left: 20rpx;
}

.msr_text {
  width: 510rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #191f25;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.msr_price{
  margin-top: 34rpx;
}
.msr_pnum{
  color: rgba(25,31,37,0.72);
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: 400;
}
.msr_nums{
  color: rgba(25,31,37,0.4);
  font-size: 24rpx;
  margin-left: 30rpx;
}
.all_shop{
  font-size: 24rpx;
  color: rgba(25,31,37,0.72);
  line-height: 33rpx;
  text-align: right;
  margin-top: 20rpx;
}
.mb_btn{
  margin-top: 20rpx;
  padding: 0 30rpx 20rpx;
}
.mbp_order{
  float: right;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #98cdc6;
  border: 2rpx solid #98cdc6;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.mbp_delete{
  float: right;
  font-size: 24rpx;
  line-height: 33rpx;
  color: rgba(25,31,37,0.72);
  border: 2rpx solid rgba(25,31,37,0.12);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.noData{
  width: 240rpx;
  margin: 300rpx auto 0;
}
.noData image {
  width: 240rpx;
  height: 240rpx;
}
.noData_text{
  font-size: 30rpx;
  line-height: 42rpx;
  margin-top: 10rpx;
  text-align: center;
  color:rgba(25,31,37,0.28);
}
.hasCard{
  background: #fff;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.hasleft{
  float: left;
}
.hasnum{
  margin-left: 40rpx;
}
.hasbtn{
  float: right;
  border-radius: 5px;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  margin-top: 15rpx;
  border: 1px solid #98cdc6;
  color: #98cdc6;
}
.botegg_text{
  line-height: 50rpx;
  font-size: 26rpx;
  color: #666;
  /* text-align: right; */
  padding: 0 30rpx;
}