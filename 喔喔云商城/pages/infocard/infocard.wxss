/* pages/infocard/infocard.wxss */
page{
  background: #f6f6f6;
  border: 1px solid #f6f6f6;
}
.clear{
  clear: both;
}
.ic_list{
  border-bottom: 1px solid rgba(25,31,37,0.12);
}
.infocard{
  margin-top: 20rpx;
  background: #fff;
  font-size: 28rpx;
  font-weight: 400;
  padding: 0 30rpx;
}
.ic_list_name{
  color: rgba(25,31,37,0.72);
  padding: 24rpx 0;
  margin-right: 70rpx;
  float: left;
  line-height: 40rpx;
}
.ic_state{
  color: #F68B0E;
  padding: 24rpx 0;
  float: left;
  margin-right: 70rpx;
  line-height: 40rpx;
}
.ic_all_state{
  color:rgba(25,31,37,0.28);
  padding: 24rpx 0;
  margin-right: 70rpx;
  float: left;
  line-height: 40rpx;
}
.btn_activate, .btn_given{
  font-size: 28rpx;
  line-height: 40rpx;
  flex-flow: 400;
  color: rgba(25,31,37,0.56);
  padding: 12rpx 42rpx;
  border-radius: 8rpx;
  border: 1px solid rgba(25, 31, 37, 0.12);
  float: left;
  margin-top: 12rpx;
}
.btn_given{
  float: right;
}