/* pages/infocard/infocard.wxss */
page{
  background: #f6f6f6;
  border: 1px solid #f6f6f6;
}
.infocardBack{
  /* background-image: url('http://wowo.zhaodaka.vip/static/backCard.png'); */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 690rpx;
  height: 386rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 30rpx auto 30rpx;
  box-shadow:0px 8px 16px 0px rgba(232,108,17,0.58);
  margin-bottom: 60rpx;
}
.cl_top{
  padding: 40rpx 40rpx 0 50rpx;
}
.cl_btit{
  font-size: 44rpx;
  font-weight: 600;
  color:rgba(255,255,255,1);
  line-height:62rpx;
  text-shadow:0px 3px 6px rgba(183,90,25,0.2);
  background:linear-gradient(180deg, rgba(255,255,255,1) 0%, rgba(249,239,211,0.75) 100%);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
  float: left;
}
.allNum{
  float: right;
  font-size: 26rpx;
  font-weight: 400;
  color :rgba(255,255,255,1);
  line-height: 33rpx;
  text-shadow: 0rpx 3px 6px rgba(183,90,25,0.63);
  margin-top: 10rpx;
}
.create_date{
  margin-top: 200rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #fff;
  text-shadow:0px 3px 6px rgba(183,90,25,0.63);
  line-height: 33rpx;
  margin-left: 66rpx;
}
.status_card{
  font-size: 30rpx;
  color: #98cdc6;
  text-align: center;
  font-weight: 400;
}
.handleBtn{
  font-size: 30rpx;
  margin-top: 100rpx;
  padding: 0 40rpx;
  color: #fff;
  display: flex;
  justify-content: space-around;
}
.activate, .given{
  background: #98cdc6;
  padding: 20rpx 120rpx;
  border-radius: 10rpx;
  box-shadow:4rpx 4rpx 10rpx #ccc; 
}
.given{
  background: #f1c71b;
}
.infocard_text{
  font-size: 28rpx;
  color: rgba(25,31,37,0.56);
  padding: 0 30rpx;
}
.infocard_label{
  color: #98cdc6;
  font-size: 28rpx;
  padding: 0 30rpx;
}
.active_text{
  text-align: center;
  color: #98cdc6;
  margin-top: 100rpx;
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  position: fixed;
  left: 0;
  top: 0;
}
.mask_card{
  width: 600rpx;
  height: 811rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 100rpx auto 0;
}
.mask_card image{
  width: 100%;
  height: 100%;
}
.mask_text{
  margin-top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 33rpx;
  margin-bottom: 60rpx;
}
.save_pic{
  width: 240rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0 auto;
  color: #fff;
  background: #98cdc6;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}
.closeMask{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.closeMask image{
  width: 30rpx;
  height: 30rpx;
  margin: 15rpx;
}