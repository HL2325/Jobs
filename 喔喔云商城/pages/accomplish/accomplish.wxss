/* pages/finish/finish.wxss */
page{
  background: #f6f6f6;
}
.clear{
  clear: both;
}
.finish_top{
  width: 100%;
  height: 120rpx;
  background: #F68B0E;
}
.top_icon{
  width: 72rpx;
  height: 72rpx;
  padding: 24rpx 20rpx 24rpx 30rpx;
  float: left;
}
.top_icon image{
  width: 100%;
  height: 100%;
}
.top_text{
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 120rpx;
}
.user_address{
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}
.address_top{
  margin-left: 90rpx;
  font-size: 28rpx;
  color: rgba(25,31,37,0.72);
  line-height: 40rpx;
}
.ad_name{
  float: left;
}
.ad_tel{
  float: right;
}
.ad_icon{
  width: 56rpx;
  height: 56rpx;
  float: left;
}
.ad_icon image{
  width: 100%;
  height: 100%;
}
.adb_text{
  float: left;
  width: 590rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color:rgba(25,31,37,0.4);
  font-weight:400;
  margin-left: 30rpx;
  margin-top: 14rpx;
}
.commodity_list{
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}
.commodity_left{
  float: left;
}
.commodity_right{
  float: left;
  margin-left: 20rpx;
}
.commodity_left{
  width: 160rpx;
  height: 160rpx;
}
.commodity_left image{
  width: 100%;
  height: 100%;
}
.comityr_des{
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(25,31,37,0.72);
  font-weight: 400;
  width: 510rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.comityr_info{
  margin-top: 35rpx;
}
.comityr_price{
  font-size: 36rpx;
  color: rgba(25,31,37,0.72);
  margin-right: 30rpx;
}
.comityr_num{
  font-size: 24rpx;
  color: #999;
}
.finish_bot{
  width: 100%;
  height: 98rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.fin_info{
  float: right;
  padding: 10rpx 40rpx;
}
.fin_alls{
  line-height:42rpx;
  font-size: 30rpx;
  color:rgba(25,31,37,0.72);
}
.fin_num{
  color: #F68B0E;
  font-size: 36rpx;
  line-height: 50rpx;
}
.finish_text{
  line-height:28rpx;
  color: rgba(25,31,37,0.28);
  font-size: 20rpx;
}

.allObj_main{
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}