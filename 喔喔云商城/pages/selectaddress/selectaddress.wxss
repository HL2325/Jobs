/* pages/selectaddress/selectaddress.wxss */
page{
  background: #f6f6f6;
}
.clear{
  clear: both;
}
.top_line{
  width: 100%;
  height: 10rpx;
}
.top_line image{
  width: 100%;
  height: 100%;
  float: left;
}

.add_bar{
  width: 100%;
  height: 98rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.add_local{
  width: 240rpx;
  margin: 26rpx auto;
}
.add_icon{
  width: 32rpx;
  height: 32rpx;
  float: left;
}
.add_icon image{
  width: 100%;
  height: 100%;
}
.add_text{
  float: left;
  color: #98cdc6;
  line-height:45rpx;
  font-size: 32rpx;
  margin-left: 16rpx;
}
.local_radio{
  padding: 10rpx 30rpx;
}
.radios{
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(25,31,37,0.12);
  position: relative;
}
.list_main{
  float: left;
  width: 500rpx;
  margin-left: 30rpx;
  margin-right: 50rpx;
}
.list_right{
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-top: 40rpx;
}
.list_right image{
  width: 100%;
  height: 100%;
}
.main_title{
  font-size: 32rpx;
  line-height:45rpx;
  color: rgba(25,31,37,0.72);
}
.main_name{
  font-weight: 600;
}
.main_tel{
  font-weight: 400rpx;
  margin-left: 40rpx;
}
.main_info{
  font-size: 24rpx;
  line-height: 33rpx;
  color: rgba(25,31,37,0.4);
  margin-top: 20rpx;
}
.delete_address{
  position: absolute;
  top: 0;
  right: -25rpx;
  width: 40rpx;
  height: 40rpx;
}
.delete_address image {
  width: 20rpx;
  height: 20rpx;
  margin: 10rpx;
  float: left;
}