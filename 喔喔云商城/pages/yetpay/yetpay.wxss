/* pages/yetpay/yetpay.wxss */
page{
  background: #f6f6f6;
}
.clear{
  clear: both;
}
.finish_top{
  width: 100%;
  height: 120rpx;
  background: #F68B0E;
}
.top_icon{
  width: 72rpx;
  height: 72rpx;
  padding: 24rpx 20rpx 24rpx 30rpx;
  float: left;
}
.top_icon image{
  width: 100%;
  height: 100%;
}
.top_tit{
  font-size: 32rpx;
  line-height: 45rpx;
  font-weight: 600;
  color: #fff;
  padding-top: 24rpx;
}
.top_des{
  font-size: 20rpx;
  line-height: 28rpx;
  color: #fff;
}
.user_address{
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}
.address_top{
  margin-left: 90rpx;
  font-size: 28rpx;
  color: rgba(25,31,37,0.72);
  line-height: 40rpx;
}
.ad_name{
  float: left;
}
.ad_tel{
  float: right;
}
.ad_icon{
  width: 56rpx;
  height: 56rpx;
  float: left;
}
.ad_icon image{
  width: 100%;
  height: 100%;
}
.adb_text{
  float: left;
  width: 590rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color:rgba(25,31,37,0.4);
  font-weight:400;
  margin-left: 30rpx;
  margin-top: 14rpx;
}
.commodity_list{
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}
.commodity_left{
  float: left;
}
.commodity_right{
  float: left;
  margin-left: 20rpx;
}
.commodity_left{
  width: 160rpx;
  height: 160rpx;
}
.commodity_left image{
  width: 100%;
  height: 100%;
}
.comityr_des{
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(25,31,37,0.72);
  font-weight: 400;
  width: 510rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.comityr_info{
  margin-top: 35rpx;
}
.comityr_price{
  font-size: 36rpx;
  color: rgba(25,31,37,0.72);
  margin-right: 30rpx;
}
.comityr_num{
  font-size: 24rpx;
  color: #999;
}
.yet_bot{
  width: 100%;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}
.yet_left{
  float: left;
  width: 60%;
  height: 100%;
}
.yet_right{
  float: left;
  text-align: center;
  width: 40%;
  height: 98rpx;
  font-size: 36rpx;
  color: #fff;
  background: #F68B0E;
  line-height: 98rpx;
}
.yet_info{
  padding: 10rpx 0 10rpx 40rpx;
}
.yet_text{
  color:rgba(25,31,37,0.28);
  line-height: 28rpx;
  font-size: 20rpx;
}
.yet_atit{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(25,31,37,0.72);
  line-height:42rpx;
}
.yet_num{
  font-weight:400;
  color:rgba(246,139,14,1);
  line-height:50rpx;
  font-size:36rpx;
}