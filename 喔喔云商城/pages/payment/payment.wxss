/* pages/payment/payment.wxss */
page{
  background: #f6f6f6;
}
.payment{
  border: 1px solid #f6f6f6;
}
.payment_pic{
  width: 186rpx;
  height: 186rpx;
  margin: 100rpx auto 50rpx;
}
.payment_pic image{
  width: 100%;
  height: 100%;
}
.payment_text{
  font-size: 40rpx;
  color:rgba(25,31,37,0.72);
  font-weight:400;
  line-height: 56rpx;
  text-align: center;
  margin-bottom: 70rpx;
}
.payment_btn{
  width: 670rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 36rpx;
  padding: 22rpx 0;
  text-align: center;
  font-weight: 400;
  background: #98cdc6;
  border-radius: 10rpx;
  margin: 0 auto;
}